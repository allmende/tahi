<h1>Invite Editor</h1>

{{#if view.showEditForm}}
  <label for="editor">Email</label>
  {{select-2-single value=""
             class="editor-select2"
             name="invite_editor"
             selectionSelected="inviteEditor"
             selectedData=editor
             minimumInputLength=0
             selectedTemplate=selectedTemplate
             resultsTemplate=resultsTemplate
             remoteSource=select2RemoteSource
             placeholder="Please select editor"}}

   <div class="button-primary button--green invite-editor-button" {{action "save" target="view"}}>Invite</div>
{{else}}
  {{user-thumbnail editor}}
  <div class="invite-editor-text">
    {{editor.fullName}} is now the editor.
    <div class="glyphicon glyphicon-trash invite-editor-remove" {{action "remove" target="view"}}></div>
  </div>
{{/if}}
