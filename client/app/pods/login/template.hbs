<div id="tahi-container">

  <div class="auth-container">
    <h1>Sign in</h1>

    <form {{action "authenticate" on="submit"}} class="auth-left">
      <div class="auth-field auth-field--text-input">
        {{input value=identification placeholder="Login"}}
      </div>

      <div class="auth-field auth-field--text-input">
        {{input value=password placeholder="Password" type="password"}}
      </div>

      <a href="#">Forgot Password</a>

      <input value="Sign In" type="submit" class="button-primary button--green auth-signin">
    </form>

    <div class="auth-right">
    </div>
  </div>

</div>
